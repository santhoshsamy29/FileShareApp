<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/student_courses_layout_item"
    android:background="@color/black_background">

    <TextView
        android:id="@+id/course_name_textview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="Data structures"
        android:textStyle="bold"
        android:fontFamily="@font/kreon_light" />


    <TextView
        android:id="@+id/teacher_name_textview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_name_textview_item"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:text="Leela velusamy"
        android:textColor="@color/neutral_font_color"
        android:fontFamily="@font/kreon_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@+id/teacher_name_textview_item">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/open_notification_button_item"
            android:layout_weight="1"
            android:src="@drawable/ic_message" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/open_files_button_item"
            android:src="@drawable/ic_folder"
            android:layout_weight="1"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/linearlayout"
        android:background="@color/divider_line_gray"/>

</RelativeLayout>