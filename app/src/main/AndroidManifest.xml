<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fileshare">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:parentActivityName=".StudentDashboardActivity"
            android:name=".CoursesActivity"
            android:label="Courses"/>
        <activity android:name=".TeacherFileListActivity"
            android:label="Files"/>
        <activity
            android:parentActivityName=".StudentDashboardActivity"
            android:name=".StudentFileListActivity"
            android:label="Files"/>
        <activity android:name=".TeacherDashboardActivity"
            android:label="Faculty Dashboard"/>
        <activity android:name=".StudentDashboardActivity"
            android:label="Student Dashboard"/>
        <activity android:name=".TeacherRegisterActivity"
            android:label="Register"/>
        <activity android:name=".StudentRegisterActivity"
            android:label="Register"/>
        <activity android:name=".TeacherLoginActivity"
            android:label="Login"/>
        <activity android:name=".StudentLoginActivity"
            android:label="Login"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>



</manifest>